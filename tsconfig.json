{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "es2020",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2020", "webworker"],
    "types": ["node", "jest"],
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "isolatedModules": false,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": false,
    "declaration": true
  },
  "include": ["@types", "src", "test/worker.spec.ts"],
  "exclude": ["test"]
}
